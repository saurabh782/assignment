package com.example.demo.Repository;

import com.example.demo.Entity.OrderEntity;
import org.springframework.stereotype.Repository;
import java.util.List;
import java.util.stream.Collectors;

@Repository
public class OrderRepository {
    private List<OrderEntity> orderEntityList;

    public List<OrderEntity> findOrdersForExecutive(Long deliveryExecutiveId) {
        List<OrderEntity> orderEntities = orderEntityList.stream().filter(orderEntity -> orderEntity.getDeliveryExecutiveId().equals(deliveryExecutiveId)).collect(Collectors.toList());
        return orderEntities;
    }

}